<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.nemo.admin.sites.notice.repository.impl.NoticeDAOMybatis">

	<resultMap id="noticeMap" type="com.nemo.admin.sites.notice.vo.NoticeVO" >
		<id column="notice_no" property="noticeNo"/>
		<result column="notice_title" property="noticeTitle"/>
		<result column="notice_content" property="noticeContent"/>
		<result column="notice_ymd" property="noticeYmd"/>
	</resultMap>

	<insert id="insertNotice"
		parameterType="com.nemo.admin.sites.notice.vo.NoticeVO">
		
		INSERT INTO notice_tb 
		VALUES (notice_sq.nextval, #{noticeTitle}, #{noticeContent}, #{noticeYmd}) 
		
		<selectKey keyProperty="noticeNo" keyColumn="NOTICE_NO" resultType="Integer" order="AFTER">
			SELECT NOTICE_SQ.currval FROM dual
		</selectKey>

	</insert>

	<select id="getNoticeList"
		parameterType="com.nemo.admin.sites.notice.vo.NoticeVO"
		resultMap="noticeMap">
		SELECT *
		FROM notice_tb 
	</select>

</mapper>
