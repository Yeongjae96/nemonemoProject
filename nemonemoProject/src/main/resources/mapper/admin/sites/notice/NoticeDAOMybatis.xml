<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.nemo.admin.sites.notice.repository.impl.NoticeDAOMybatis">

	<resultMap id="noticeMap" type="com.nemo.admin.sites.notice.vo.NoticeVO" >
		<id column="notice_no" property="noticeNo"/>
		<result column="notice_title" property="noticeTitle"/>
		<result column="notice_content" property="noticeContent"/>
		<result column="notice_registry_ymd" property="noticeRegistryYmd"/>
		<result column="notice_modify_ymd" property="noticeModifyYmd"/>
	</resultMap>

	<insert id="insertNotice"
		parameterType="com.nemo.admin.sites.notice.vo.NoticeVO">
		
		INSERT INTO notice_tb 
		VALUES (notice_sq.nextval, #{noticeTitle}, #{noticeContent}, #{noticeRegistryYmd}) 
		
		<selectKey keyProperty="noticeNo" keyColumn="NOTICE_NO" resultType="Integer" order="AFTER">
			SELECT NOTICE_SQ.currval FROM dual
		</selectKey>

	</insert>

	<delete id="deleteNotice" parameterType="int" >
		DELETE FROM notice_tb WHERE notice_no = #{noticeNo}
	</delete>

	<select id="getNoticeList"
		parameterType="com.nemo.admin.sites.notice.vo.NoticeVO"
		resultMap="noticeMap">
		SELECT *
		FROM notice_tb 
	</select>
	
	<select id="getNotice"
		parameterType="int"
		resultMap="noticeMap">
			
		SELECT *
		FROM notice_tb
		WHERE notice_no = #{noticeNo}
	</select>
	
	<update id="updateNotice" parameterType="com.nemo.admin.sites.notice.vo.NoticeVO">
	
		UPDATE notice_tb 
		SET notice_title = #{noticeTitle}, notice_content = #{noticeContent}, notice_modify_ymd = sysdate
		WHERE notice_no = #{noticeNo} 
		
	</update>



</mapper>
